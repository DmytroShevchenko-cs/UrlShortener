<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - UrlShortener</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/UrlShortener.styles.css" asp-append-version="true"/>
</head>
<body class="d-flex flex-column min-vh-100">
<header class="site-header">
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <div class="brand-icon">
                    <svg xmlns="http://www.w3.org/2001/XMLSchema-instance" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                </div>
                <span>URL<span class="text-dark">Shortener</span></span>
            </a>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <div class="nav-button-group d-flex gap-3 ms-lg-4">
                    <a class="nav-btn @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="nav-btn @(ViewContext.RouteData.Values["Controller"]?.ToString() == "About" ? "active" : "")" 
                       asp-controller="About" asp-action="Index">
                        About
                    </a>
                </div>

                <div class="d-flex align-items-center auth-group gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="user-profile">
                            <div class="user-avatar">@User.Identity.Name?[0].ToString().ToUpper()</div>
                            <span class="d-none d-sm-inline fw-medium text-dark">@User.Identity.Name</span>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="btn-login text-decoration-none fw-medium" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-primary rounded-pill px-4 shadow-sm" asp-controller="Account" asp-action="Register">Get Started</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>